@page "{pizzaQuantity?}/{orderComplete?}"
@model PizzaStore.Pages.CalculatePriceModel

@{
    ViewData["Title"] = "Calculate price of pizza";
}
@using PizzaStore.Utilidades
<h1>The price of your pizza is @Model.totalPrice ₡</h1>


<form method="post">
    
           
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <input id="btnCreate" type="submit" class="btn-primary" asp-page-handler="Eeturn" value="Return" style="width: 150px" />
            </div>
            
            <div class="col-md-2">




                <input id="btnloc" type="submit" class="btn-primary" asp-page-handler="Localization" value="Set localization" style="width: 150px" />


            </div>
            
        </div>
    </div>
</form>
